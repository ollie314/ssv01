<h1>Listing languages</h1>

<table>
  <tr>
    <th>Iso2</th>
    <th>Iso3</th>
    <th>Ietf</th>
    <th>Name</th>
    <th>Flag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.iso2 %></td>
    <td><%= language.iso3 %></td>
    <td><%= language.ietf %></td>
    <td><%= language.name %></td>
    <td><%= language.flag %></td>
    <td><%= link_to 'Show', admin_language_path(language) %></td>
    <td><%= link_to 'Edit', edit_admin_language_path(language) %></td>
    <td><%= link_to 'Destroy', admin_language_path(language), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

